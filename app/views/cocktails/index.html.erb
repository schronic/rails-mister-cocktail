<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/berlin');">
  <div class="banner-content">
    <h1>Mr. Cocktail</h1>
    <p>Learn more about your favourite Cocktail</p>
    <%= link_to 'Add new cocktail', new_cocktail_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>

<div class="container">

    <% @cocktails.each do |cocktail| %>
    <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://kitt.lewagon.com/placeholder/cities/shanghai');">
      <div class="card-category">Popular</div>
      <div class="card-description">
        <div class="col-xs-12 col-sm-4">
          <%= link_to cocktail.name, cocktail_path(cocktail), class: 'cocktail-name' %>
        </div>
      </div>
      <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
      <%= link_to "", cocktail_path(cocktail) %>
    </div>
    <% end %>

</div>



